<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@null">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/delete_dialog_bg"
        android:gravity="center">

        <ImageView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/pop_images_inform"/>

        <TextView
            android:id="@+id/alert_title"
            android:layout_above="@+id/head"
            android:textColor="@color/text_color_1"
            android:layout_marginTop="@dimen/dp_35"
            android:gravity="center"
            android:layout_width="match_parent"
            android:textSize="@dimen/sp_18"
            android:text="开启消息提醒"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/alert_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="这样才能在优惠的时候 第一时间推送消息给你哦"
            android:layout_below="@+id/alert_title"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_35"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_color_5"/>

        <Button
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/alert_message"
            android:layout_marginBottom="@dimen/dp_44"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="好的"
            android:paddingRight="@dimen/dp_70"
            android:paddingLeft="@dimen/dp_70"
            android:textSize="@dimen/sp_16"
            android:background="@drawable/button_red_bg"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/close"
        android:layout_width="@dimen/dp_32"
        android:layout_height="@dimen/dp_32"
        android:layout_marginTop="@dimen/dp_20"
        android:src="@mipmap/pop_icon_close_white"/>

</LinearLayout>